{
  "name": "claude-code-bridge",
  "version": "0.1.0",
  "description": "MCP server for orchestrating Claude Code CLI tasks",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-code-bridge": "./dist/index.js",
    "ccb": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cli.json",
    "build:cli": "tsc -p tsconfig.cli.json",
    "dev": "tsx src/index.ts",
    "cli": "tsx src/cli/index.ts",
    "test": "vitest",
    "test:cli": "vitest run tests/cli",
    "test:coverage": "vitest --coverage",
    "test:live": "tsx scripts/test-live.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ignore": "^5.3.0",
    "node-pty": "^1.0.0",
    "ora": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "mcp",
    "claude",
    "claude-code",
    "ai",
    "automation"
  ],
  "author": "",
  "license": "MIT"
}
